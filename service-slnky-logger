#!/usr/bin/env ruby

lib = File.expand_path('../lib', __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)

require 'rubygems'
require 'bundler/setup'
require 'dotenv'
require 'daemons'
require 'slnky/service/logger'
Dotenv.load

env = ARGV[1]

# Become a daemon
Daemons.daemonize if env == 'production'

Slnky::Service::Logger.new(ENV['SLNKY_URL'], env: env).start
